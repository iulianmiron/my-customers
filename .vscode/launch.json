    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Gulp task: cache busting",
            "program": "${workspaceFolder}/src/node_modules/gulp/bin/gulp.js",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "rev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/src",
            "runtimeArgs": [
                "run-script",
                "app:dev"
            ]
        }
    ]
}